<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/location_pointer"
            android:tint="@color/colorPrimary"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/full_circle"
            android:tint="@color/black_text_color"/>

        <com.reryde.app.Utils.MyTextView
            android:id="@+id/estimation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="0"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/_6sdp" />

        <com.reryde.app.Utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estimation_time"
            android:layout_centerHorizontal="true"
            android:text="MIN"
            android:textColor="@color/colorTextWhite"
            android:visibility="gone"
            android:textSize="@dimen/_5sdp" />

    </RelativeLayout>

</LinearLayout>